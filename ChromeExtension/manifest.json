{
  "manifest_version": 3,
  "name": "Solaris Dictation",
  "version": "1.0",
  "description": "Low-Latency Offline Dictation Side Panel",
  "icons": {
    "128": "pic.png"
  },
  "permissions": [
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Solaris Dictation"
  },
  "side_panel": {
    "default_path": "panel.html"
  }
}